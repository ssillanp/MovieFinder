<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/thspinner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="598dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            android:background="#A1F4FF"/>
    <Spinner
            android:layout_width="120dp"
            android:layout_height="wrap_content" android:id="@+id/datespinner"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="503dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:background="#A1F4FF" app:layout_constraintVertical_bias="0.19"/>
    <EditText
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/fromTime" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="@+id/showList"
            app:layout_constraintVertical_bias="0.081"
            app:layout_constraintStart_toEndOf="@+id/datespinner" app:layout_constraintHorizontal_bias="0.21"/>
    <EditText
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/toTime"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.081" app:layout_constraintStart_toEndOf="@+id/fromTime"
            app:layout_constraintHorizontal_bias="0.933"/>
    <ListView
            android:layout_width="410dp"
            android:layout_height="600dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/showList" android:scrollbars="vertical" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.854"/>
    <TextView
            android:text="to:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewTo"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/toTime"
            app:layout_constraintStart_toEndOf="@+id/fromTime" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.075"/>
    <TextView
            android:text="from:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewFrom"
            app:layout_constraintEnd_toStartOf="@+id/fromTime" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.991" app:layout_constraintVertical_bias="0.075"/>
</androidx.constraintlayout.widget.ConstraintLayout>